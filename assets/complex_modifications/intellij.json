{
  "title": "Intellij key bindings",
  "rules": [
    {
      "description": "intellij: caps as control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.jetbrains.intellij"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "intellij: shift-caps as shift-control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.jetbrains.intellij"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "intellij: control to caps",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.jetbrains.intellij"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "intellij: left option to command",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_option"
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.jetbrains.intellij"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "intellij: left command to alt",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command"
          },
          "to": [
            {
              "key_code": "left_alt"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.jetbrains.intellij"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "intellij: alt-caps as alt-control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.jetbrains.intellij"
              ]
            }
          ]
        }
      ]
    }
  ]
}
